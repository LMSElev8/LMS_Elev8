@model List<LMS_Project.Models.Course>

		<div class="page-content bg-white">
        <!-- inner page banner -->
        <div class="page-banner ovbl-dark" style="background-image:url(assets/images/banner/banner3.jpg);">
            <div class="container">
                <div class="page-banner-entry">
                    <h1 class="text-white">Enrolled Courses</h1>
				 </div>
            </div>
        </div>
		<!-- Breadcrumb row -->
		<div class="breadcrumb-row">
			<div class="container">
				<ul class="list-inline">
					<li><a href="#">Home</a></li>
					<li>Enrolled Courses</li>
				</ul>
			</div>
		</div>
		<!-- Breadcrumb row END -->
        <!-- inner page banner END -->
		<div class="content-block">
            <!-- About Us -->
			<div class="section-area section-sp1">
                <div class="container">
					 <div class="row">
						<div class="col-lg-3 col-md-4 col-sm-12 m-b30">
							<div class="widget widget_archive">
                                <h5 class="widget-title style-1">All Courses</h5>
                                <ul>
                                    <li class="active"><a href="#">General</a></li>
                                    <li><a href="#">IT & Software</a></li>
                                    <li><a href="#">Technology</a></li>
                                    <li><a href="#">Business</a></li>
                                    <li><a href="#">Design</a></li>
                                    <li><a href="#">Marketing</a></li>
                                    <li><a href="#">Health & Fitness</a></li>
                                    <li><a href="#">Music</a></li>
                                </ul>
                            </div>
							<div class="widget">
								<a href="#"><img src="assets/images/adv/adv.jpg" alt=""/></a>
							</div>
						</div>
						<div class="col-lg-9 col-md-8 col-sm-12">
							<div class="row">

								@foreach (var item in Model) {
									<div class="col-md-6 col-lg-4 col-sm-6 m-b30">
										<div class="cours-bx">
											<div class="action-box">
												<img src="@("~/image/"+item.ImageUrl)" asp-append-version="true" />
											</div>
											<div class="info-bx text-center">
												<h5><a asp-controller="CourseDetails" asp-action="Index" asp-route-id="@item.CourseId">@item.Title</a></h5>
												<span>@item.Category</span>
											</div>
											<div class="cours-more-info">
												<div class="review">
													<span style="font-size: 13px;">@item.EnrollmentCount</span>
													<span style="font-size: 13px;">Enrollments</span>
												</div>
												<div style="margin:auto">
													<button
                                                	style="background-color: #32CD32; color: #F0FFFF">Enrolled</button>
												</div>
											</div>
										</div>
									</div>
								}                              
							</div>
						</div>
					</div>
				</div>
            </div>
        </div>
		<!-- contact area END -->
		
    </div>